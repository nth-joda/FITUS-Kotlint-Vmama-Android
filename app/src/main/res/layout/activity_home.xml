<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@color/fitus_dark_blue">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_vmamahoriz"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@drawable/main_screen_lightblue_container"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Xin chào, Tèo!"
                android:textColor="@color/fitus_white"
                android:textSize="32dp"
                android:padding="10dp"
                />
        </LinearLayout>
    </LinearLayout>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-100dp"
        android:columnCount="2"
        android:padding="1dp"
        android:rowCount="2">

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top|center"
            android:background="@drawable/main_screen_button_div"
            android:elevation="5dp"
            android:padding="20dp">

            <Button
                android:id="@+id/open_activity_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_camerafitus"
                app:tint="@color/fitus_dark_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:text="Chụp hóa đơn"
                android:textAlignment="center"
                android:textColor="@color/fitus_dark_blue"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="left"
            android:background="@drawable/main_screen_button_div"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/open_activity_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_book_markfitus"
                app:tint="@color/fitus_dark_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:text="Lịch sử HĐ"
                android:textAlignment="center"
                android:textColor="@color/fitus_dark_blue"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="right"
            android:background="@drawable/main_screen_button_div"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/open_activity_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_userfitus"
                app:tint="@color/fitus_dark_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:text="Hồ sơ cá nhân"
                android:textAlignment="center"
                android:textColor="@color/fitus_dark_blue"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </GridLayout>
</LinearLayout>