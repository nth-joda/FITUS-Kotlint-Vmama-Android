<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@color/fitus_dark_blue">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_vmamahoriz"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/main_screen_lightblue_container"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:text="Xin chào, Tèo!"
            android:textColor="@color/fitus_white"
            android:textSize="32dp"
            android:padding="10dp"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="-100dp">

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            android:layout_gravity="center|left"
            android:background="@drawable/main_screen_button_div"
            android:elevation="5dp"
            android:padding="20dp">

            <Button
                android:id="@+id/open_activity_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_camerafitus"
                app:tint="@color/fitus_dark_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chụp hóa đơn"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/fitus_dark_blue"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            android:layout_gravity="center|right"
            android:orientation="vertical"
            android:background="@drawable/main_screen_button_div"
            android:elevation="5dp"
            android:padding="20dp">
            <Button
                android:id="@+id/open_activity_imglibrary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_add_img"
                app:tint="@color/fitus_dark_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ảnh có sẵn"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/fitus_dark_blue"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            android:layout_gravity="center|left"
            android:orientation="vertical"
            android:background="@drawable/main_screen_button_div"
            android:elevation="5dp"
            android:padding="20dp">
            <Button
                android:id="@+id/open_activity_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_book_markfitus"
                app:tint="@color/fitus_dark_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch sử HĐ"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/fitus_dark_blue"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            android:layout_gravity="center|right"
            android:orientation="vertical"
            android:background="@drawable/main_screen_button_div"
            android:elevation="5dp"
            android:padding="20dp">
            <Button
                android:id="@+id/open_activity_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_userfitus"
                app:tint="@color/fitus_dark_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hồ sơ cá nhân"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/fitus_dark_blue"
                android:textStyle="bold"/>
        </RelativeLayout>
    </GridLayout>
</LinearLayout>