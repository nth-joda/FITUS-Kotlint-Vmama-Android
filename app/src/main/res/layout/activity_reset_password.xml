<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/fitus_dark_blue"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_vmamahoriz" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/main_screen_lightblue_container"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-300dp"
        android:background="@drawable/rounded_password"
        android:orientation="vertical"
        android:translationZ="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Nhập mật khẩu mới"
                android:textColor="#025395"
                android:textSize="20sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textColor="#000">
            </EditText>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Ít nhất 8 kí tự"
                android:textColor="#ff0000"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Bao gồm chữ và số"
                android:textColor="#ff0000"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Có kí tự đặc biệt"
                android:textColor="#ff0000"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:text="Có chữ in hoa"
                android:textColor="#ff0000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Xác nhận lại mật khẩu"
                android:textColor="#025395"
                android:textSize="20sp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textColor="#000">
            </EditText>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:layout_marginEnd="120dp"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#025395"
            android:textSize="17dp">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAccept"
            android:background="@drawable/btn_login"
            android:enabled="true"
            android:padding="10dp"
            android:text="Xác Nhận"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="17dp">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</LinearLayout>