<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name=".CameraActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exchangevoucher.CameraFragment">

    <FrameLayout
        android:id="@+id/ctaBottom"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/black"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/previewLayout">

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Xin giữ hóa đơn phẳng và chụp ở nơi có ánh sáng tốt"
            android:textAlignment="center"
            android:textColor="@color/fitus_white"
            android:textSize="20sp">

        </TextView>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            android:background="@drawable/circle_cam_btn"
            android:translationZ="4dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/image_capture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_cam_btn" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_camerafitus"
                android:translationZ="5dp" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:background="@color/fitus_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:elevation="2dp"
                    android:paddingHorizontal="60dp"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:id="@+id/back_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_homefitus" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:elevation="2dp"
                    android:paddingHorizontal="60dp"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:id="@+id/video_capture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_add_img" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/previewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_dev_load_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="DEV: LOAD IMAGE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>