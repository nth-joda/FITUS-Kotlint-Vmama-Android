                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_voucher"
                    android:text="@string/_2_000_005_10_vnd"
                    android:textColor="#025395"
                    android:textSize="40px"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/product7"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_voucher"
                    android:text="@string/t_n_s_n_ph_m_s_07_n"
                    android:textColor="#025395"
                    android:textSize="40px"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/price7"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_column="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_voucher"
                    android:text="@string/_2_000_006_10_vnd"
                    android:textColor="#025395"
                    android:textSize="40px"
                    android:textStyle="normal" />

            </TableRow>

        </TableLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:background="@color/fitus_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:elevation="2dp"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:id="@+id/cancel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_cancelfitus"
                        android:contentDescription="TODO"
                        android:focusable="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:elevation="2dp"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:id="@+id/video_capture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_add_img"
                        android:contentDescription="TODO"
                        android:focusable="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:elevation="2dp"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:id="@+id/edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_editfitus"
                        android:contentDescription="TODO"
                        android:focusable="true" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:elevation="2dp"
                    android:paddingVertical="15dp">

                    <ImageView
                        android:id="@+id/done"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:src="@drawable/ic_done_round_fillfitus"
                        android:contentDescription="TODO"
                        android:focusable="true" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


    </FrameLayout>


</LinearLayout>

