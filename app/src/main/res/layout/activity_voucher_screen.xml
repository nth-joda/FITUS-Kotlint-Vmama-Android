<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VoucherScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/fitus_dark_blue"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_vmamahoriz"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_screen_lightblue_container1">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stretchColumns="0,30">

            <TableRow
                android:layout_width="match_parent"

                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/main_screen_lightblue_container1"
                    android:text="@string/t_n_s_n_ph_m"
                    android:textColor="#fff"
                    android:textSize="50px"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:background="@drawable/main_screen_lightblue_container1"
                    android:text="@string/gi_ti_n"
                    android:textColor="#fff"
                    android:textSize="50px"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/product1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_voucher"
                    android:text="@string/t_n_s_n_ph_m_s_01_10"
                    android:textColor="#025395"
                    android:textSize="40px"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/price1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_column="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_voucher"
                    android:text="@string/_2_000_000_10_vnd"
                    android:textColor="#025395"
                    android:textSize="40px"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/product2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_voucher"
                    android:text="@string/t_n_s_n_ph_m_s_02_10"
                    android:textColor="#025395"
                    android:textSize="40px"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/price2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_column="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_voucher"
                    android:text="@string/_2_000_001_10_vnd"
                    android:textColor="#025395"
                    android:textSize="40px"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/product3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_voucher"
                    android:text="@string/t_n_s_n_ph_m_s_03_n"
                    android:textColor="#025395"
                    android:textSize="40px"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/price3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_column="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_voucher"
                    android:text="@string/_2_000_002_10_vnd"
                    android:textColor="#025395"
                    android:textSize="40px"
                    android:textStyle="normal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/product4"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_column="0"
                    android:layout_marginStart="10dp"
