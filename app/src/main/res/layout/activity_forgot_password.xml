<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/fitus_dark_blue"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_vmamahoriz" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/main_screen_lightblue_container"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-200dp"
        android:background="@drawable/rounded_password"
        android:orientation="vertical"

        android:translationZ="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"

                android:text="Vui lòng nhập email mà bạn đã sử dụng để đăng ký tài khoản  "
                android:textAlignment="center"
                android:textColor="#025395"
                android:textSize="20sp" />

            <EditText

                android:layout_width="250dp"
                android:layout_height="30dp"
                android:paddingHorizontal="15dp"
                android:paddingVertical="3dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textColor="#000">

            </EditText>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="120dp"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#025395"
            android:textSize="17dp">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAcceptForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login"
            android:enabled="true"
            android:padding="10dp"
            android:text="Xác Nhận"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="17dp">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</LinearLayout>